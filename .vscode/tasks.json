{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    // ----------------------------- LOVE2D TASKS
    {
      "label": "love2d: build",
      "type": "shell",
      "command": "lua build-love2d.lua",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "problemMatcher": {
        "owner": "lua",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
            "regexp": "^(.*) @ (.*):(\\d*): (.*)$",
            "file": 2,
            "line": 3,
            "column": 5,
            "severity": 1,
            "message": 4
        },
      }
    },
    // TODO: compile task to build into standalone executable
    {
      "label": "love2d: run",
      "type": "shell",
      "command": "love _love2d",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "love2d: build & run",
      "type": "shell",
      "dependsOrder": "sequence",
      "dependsOn": [
        "love2d: build",
        "love2d: run",
      ],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    // ----------------------------- PLAYDATE TASKS
    {
      "label": "playdate: build",
      "type": "shell",
      "command": "lua build-playdate.lua",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": {
        "owner": "lua",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.*) @ (.*\\.lua):(\\d*): (.*)$",
          "file": 2,
          "line": 3,
          "column": 5,
          "severity": 1,
          "message": 4
        }
      }
    },
    {
      "label": "playdate: compile",
      "type": "shell",
      "command": "rmdir ${workspaceFolderBasename}.pdx /s /q & pdc _pdx ${workspaceFolderBasename}.pdx",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "playdate: run",
      "type": "shell",
      "command": "PlaydateSimulator ${workspaceFolderBasename}.pdx",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "playdate: build & run",
      "type": "shell",
      "dependsOrder": "sequence",
      "dependsOn": [
        "playdate: build",
        "playdate: compile",
        "playdate: run",
      ],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    // ----------------------------- LOVE2D & PLAYDATE TASKS
    {
      "label": "all: run & build",
      "type": "shell",
      "dependsOn": [
        "playdate: build & run",
        "love2d: build & run",
      ],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    }
  ]
}